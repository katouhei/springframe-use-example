<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                            ">

    <context:component-scan base-package="com.jx.nc" />

    <bean id="helloWorld" class="com.jx.nc.HelloWorld" init-method="xml_init" destroy-method="xml_destroy">
        <property name="message" value="Hello World!" />
    </bean>

    <bean class="com.jx.nc.InitBeanPostProcessor" />
    <bean class="com.jx.nc.InstanceBeanPostProcessor" />
    <bean class="com.jx.nc.BeanFactoryPostProcessorTest" />
</beans>